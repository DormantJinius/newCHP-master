extends layoutadmin

block content
    .row
        .col-md-2
            .sidebar(style='border-right: 1px solid grey; padding-right: 0; border-bottom: 1px solid grey;')
                ul.nav.nav-sidebar
                    p.phases Phase I
                        ul
                            li.sprints
                                a(href='/ph2sp1admin') Sprint 1


        .col-md-8
            h2 Sprint 1: HTML5/CSS3/JavaScript
            ul
                li
                    form#formSubmitTask(name="addTask",method="post",action="/addTaskSave11")
                        each task in tasks[5].tasklist
                            li
                                p= task.task
                        input#inputTask(type="text", placeholder="Add Task", name="inputTask")
                        button#btnSubmit(type="submit") Submit

            h3 Assignments

            .row
                .col-md-4
                    ul
                        input#checkAssign(type="checkbox", name="assignment")
                        | *Introduction to HTML5 (instructor-led)
                        br
                        input#checkAssign(type="checkbox", name="assignment")
                        | + overview of HTML5 technologies
                        br
                        input#checkAssign(type="checkbox", name="assignment")
                        | Tasks: creating HTML5 Web pages with HTML5 technologies
                        br
                        input#checkAssign(type="checkbox", name="assignment")
                        | + CSS3

                .col-md-6
                    table
                        thead
                            tr: th Grades
                        tbody
                            tr
                                td
                                    form#formAddGrade(name="addGrade",method="post",action="/addGradeSave11")
                                        input#inputGrade(type="number", placeholder="Bill", name="billsGrade", min="1",
                                        max="100")
                                        input#inputGrade(type="number", placeholder="Jose", name="josesGrade", min="1",
                                        max="100")
                                        input#inputGrade(type="number", placeholder="Peter", name="petersGrade", min="1",
                                        max="100")
                                        input#inputGrade(type="number", placeholder="Sean", name="seansGrade", min="1",
                                        max="100")
                                        input#inputGrade(type="number", placeholder="Taylor", name="taylorsGrade",
                                        min="1",
                                        max="100")
                                        button#btnSubmit(type="submit") Submit

                .col-md-2
                    - var billGrade = grades[2].gradelist[0].billsGrade
                    - var joseGrade = grades[2].gradelist[1].josesGrade
                    - var peterGrade = grades[2].gradelist[2].petersGrade
                    - var seanGrade = grades[2].gradelist[3].seansGrade
                    - var taylorGrade = grades[2].gradelist[4].taylorsGrade
                    p.grades= "Bill: " + billGrade
                    p.grades= "Jose: " + joseGrade
                    p.grades= "Peter: " + peterGrade
                    p.grades= "Sean: " + seanGrade
                    p.grades= "Taylor: " + taylorGrade

            h3 Questions
            ol
                each question in questions[3].questionlist
                    li
                        p= question.question
                    form#formSubmitAnswer(name="addAnswer",method="post",action="/addAnswerSave11")
                        input#inputAnswer(type="text", placeholder="Enter text", name="inputAnswer")
                        button#btnSubmit(type="submit") Submit Answer





